<div class="container">
    <div class="row"> 
        <div class="show-cont">
            <h2><%= @user.nickname %></h2>
            <h6><%= @user.first_name %> <%= @user.last_name %></h6>
            <h6><strong><%= @user.email %></strong></h6>
            <p><%= @user.bio %></p>
            <%= link_to 'Edit profile', edit_user_path(@user), class: "btn btn-outline-secondary" %>
            <%= link_to 'Twittar', new_post_path(@user), class: "btn btn-primary ml-2" %>
                <ul class="list-group">
                    <% @user.posts.each do |post| %>
                    <%= @user.first_name %> <%= @user.last_name %> <%= post.created_at.strftime("%d/%m/%Y posted at: %H:%M") %>
                    <li class="list-group-item"><%= post.content %></li> 
                    <div class=button-del-post>
                    <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
                    </div>
            <% end %>
                </ul> 
        </div> 
            
    </div>
</div>